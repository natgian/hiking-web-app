<% layout("./layouts/boilerplate") %>

<div class="container-fluid">
  <div class="row justify-content-center | pt-5 p-3 | bg-light-section">
    <div class="col-10 col-md-8 col-lg-6">
      <form action="/contact" method="POST" class="contact-form">
        <h1>Contact</h1>

        <div class="mb-3 pt-3 col-12">
          <label for="name" class="form-label">Name:</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="Full name" required autofocus />
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email:</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Email address" required />
        </div>

        <div class="mb-3">
          <label for="subject" class="form-label">Subject:</label>
          <input type="text" class="form-control" name="subject" id="subject" placeholder="What is your message about?" required />
        </div>

        <div class="mb-3">
          <label for="message" class="form-label">Message:</label>
          <textarea name="message" class="form-control" id="message" cols="30" rows="10" placeholder="Your message..." required></textarea>
        </div>

        <div class="cf-turnstile" id="turnstile-container" data-sitekey="<%= site_key %>" data-size="normal" data-language="auto" data-theme="light"></div>

        <div class="mt-4 d-grid gap-2 mb-5">
          <input type="submit" value="Send Message" class="btn btn-success btn-block" />
        </div>
      </form>
    </div>
  </div>
</div>
