<% layout("./layouts/boilerplate") %>

<div class="container-fluid">
  <div class="row |Â mt-5 pt-5 p-3 justify-content-center | bg-light-section">
    <h1><%=user.username%></h1>

    <ul class="list-unstyled mt-4">
      <li class="mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" style="vertical-align: -0.125em;" width="0.75em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 384 512"><path fill="currentColor" d="M288 48c0 26.5-21.5 48-48 48s-48-21.5-48-48s21.5-48 48-48s48 21.5 48 48zm-44.7 182.7L224.2 307l49.7 49.7c9 9 14.1 21.2 14.1 33.9V480c0 17.7-14.3 32-32 32s-32-14.3-32-32v-82.7l-73.9-73.9c-15.8-15.8-22.2-38.6-16.9-60.3l20.4-84c8.3-34.1 42.7-54.9 76.7-46.4c19 4.8 35.6 16.4 46.4 32.7l28.4 42.6H336v-24c0-13.3 10.7-24 24-24s24 10.7 24 24v304c0 13.3-10.7 24-24 24s-24-10.7-24-24V272h-39.4c-16 0-31-8-39.9-21.4l-13.3-20zM81.1 471.9L117.3 334c3 4.2 6.4 8.2 10.1 11.9l41.9 41.9l-26.4 100.3c-4.5 17.1-22 27.3-39.1 22.8s-27.3-22-22.8-39.1zm55.5-346l-35.2 140.6c-3 12.1-14.9 19.9-27.2 17.9l-47.9-8c-14-2.3-22.9-16.3-19.2-30L31.9 155c9.5-34.8 41.1-59 77.2-59h4.2c15.6 0 27.1 14.7 23.3 29.8z"/></svg>&nbsp;
        <a href="#contributions">My contributions</a>
      </li>
      <li>
        <svg xmlns="http://www.w3.org/2000/svg" style="vertical-align: -0.125em;" width="0.75em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 384 512"><path fill="currentColor" d="M0 48v439.7C0 501.1 10.9 512 24.3 512c5 0 9.9-1.5 14-4.4L192 400l153.7 107.6c4.1 2.9 9 4.4 14 4.4c13.4 0 24.3-10.9 24.3-24.3V48c0-26.5-21.5-48-48-48H48C21.5 0 0 21.5 0 48z"/></svg>&nbsp;
        <a href="#bookmarked">My bookmarks</a>
      </li>
    </ul>
   
    <div class="row">
      <div class="mt-3 mb-2" id="cluster-map"></div>
      <div class="d-flex justify-content-center">
        <button id="fit" class="btn btn-secondary btn-sm mb-3">Center map</button>
      </div>
    </div>

    <!-- Contributions -->
    <div class="row mt-5">

      <h2 class="mb-4" id="contributions">Contributions:</h2>
      <% for (let hike of hikes) { %>
      <div class="col-lg-4 col-md-6 col-sm-12 g-4">
        <div class="card index-card | text-bg-light | overflow-hidden">

          <% if(hike.images.length){ %>
          <img class="card-img-top index-images" src="<%=hike.images[0].url%>" alt="" crossorigin>
          <% } else{%>
          <img class="img-fluid index-images"
            src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg" alt="">
          <% } %>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%=hike.title%></h5>
            <p class="card-text">
              <small class="text-muted"><%=hike.location%></small>
            </p>
            <p class="card-text">
              <small class="text-muted">&#11108; <%=hike.distance%> km</small>&nbsp;&nbsp;
              <small class="text-muted">&#128337; <%=hike.duration%> hours</small>&nbsp;&nbsp;
              <small class="text-muted">&#9650; <%=hike.ascent%> m</small>&nbsp;&nbsp;
              <small class="text-muted"><svg xmlns="http://www.w3.org/2000/svg" style="vertical-align: -0.125em;" width="0.75em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 384 512"><path fill="currentColor" d="M288 48c0 26.5-21.5 48-48 48s-48-21.5-48-48s21.5-48 48-48s48 21.5 48 48zm-44.7 182.7L224.2 307l49.7 49.7c9 9 14.1 21.2 14.1 33.9V480c0 17.7-14.3 32-32 32s-32-14.3-32-32v-82.7l-73.9-73.9c-15.8-15.8-22.2-38.6-16.9-60.3l20.4-84c8.3-34.1 42.7-54.9 76.7-46.4c19 4.8 35.6 16.4 46.4 32.7l28.4 42.6H336v-24c0-13.3 10.7-24 24-24s24 10.7 24 24v304c0 13.3-10.7 24-24 24s-24-10.7-24-24V272h-39.4c-16 0-31-8-39.9-21.4l-13.3-20zM81.1 471.9L117.3 334c3 4.2 6.4 8.2 10.1 11.9l41.9 41.9l-26.4 100.3c-4.5 17.1-22 27.3-39.1 22.8s-27.3-22-22.8-39.1zm55.5-346l-35.2 140.6c-3 12.1-14.9 19.9-27.2 17.9l-47.9-8c-14-2.3-22.9-16.3-19.2-30L31.9 155c9.5-34.8 41.1-59 77.2-59h4.2c15.6 0 27.1 14.7 23.3 29.8z"/></svg>
                <%=hike.difficulty.substring(0, 2)%></small>
            </p>

            <a href="/hikes/<%=hike._id%>" class="btn btn-sm btn-success mt-auto">Read more</a>

          </div>

        </div>
      </div>
      <% } %>

    </div>

    <!-- Bookmarks -->
    <div class="row mt-5">
      <h2 class="mb-3" id="bookmarked">Bookmarks:</h2>

      <div>
        <ul class="list-unstyled">
          <% if(loggedInUser) {%> 
          <% for(let bookmark of bookmarks) { %>
          <li class="mb-1">
            <a href="/hikes/<%=bookmark.hikeId%>" class="inline-block"><%=bookmark.title%></a>
        <!-- REMOVE BOOKMARK BUTTON -->
        <form action="/bookmarks/<%=bookmark._id%>?_method=DELETE" method="POST" class="inline-block">
          <button type="submit" id="removeBookmark" class="btn btn-sm inline-block" title="remove bookmark"><svg xmlns="http://www.w3.org/2000/svg" style="vertical-align: -0.125em;" width="0.88em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 448 512"><path fill="currentColor" d="M135.2 17.7C140.6 6.8 151.7 0 163.8 0h120.4c12.1 0 23.2 6.8 28.6 17.7L320 32h96c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 96 0 81.7 0 64s14.3-32 32-32h96l7.2-14.3zM32 128h384v320c0 35.3-28.7 64-64 64H96c-35.3 0-64-28.7-64-64V128zm96 64c-8.8 0-16 7.2-16 16v224c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16v224c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16v224c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16z"/></svg></button>
        </form>
          </li>
          <% } %>
          <% } %> 
        </ul>
      </div>

    </div>

  </div>

  <script>
    const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
    const hikes = { features: <%-JSON.stringify(hikes) %> }
  </script>

  <script src="/javascripts/clusterMap.js"></script>